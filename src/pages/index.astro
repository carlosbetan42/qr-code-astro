---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <main class='min-h-screen grid place-content-center'>
    <div class='bg-white rounded-2xl w-80 p-4 flex flex-col gap-4'>
      <picture class='pb-2'>
        <img class='rounded-lg' src='/image-qr-code.png' alt='' />
      </picture>
      <h1 class='font-bold text-2xl text-center px-2'>Improve your front-end skills by building projects</h1>
      <p class='text-base text-center text-gray-400 px-6'>
        Scan the QR code to visit Frontend Mentor and take your coding skills to the next level
      </p>
    </div>
  </main>
</Layout>
